<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/raw_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raw Id" />

    <EditText
        android:id="@+id/raw_id_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:focusable="false" />

    <TextView
        android:id="@+id/cred_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credential Id (Base64 URL)" />

    <EditText
        android:id="@+id/cred_id_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:focusable="false" />

    <TextView
        android:id="@+id/client_data_json_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client Data JSON" />

    <EditText
        android:id="@+id/client_data_field"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:focusable="false" />

    <TextView
        android:id="@+id/attestation_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attestation Object (Base64 URL)" />

    <EditText
        android:id="@+id/attestation_field"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:focusable="false" />

    <Button
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLOSE" />
</LinearLayout>
